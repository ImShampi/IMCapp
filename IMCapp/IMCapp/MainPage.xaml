<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMCapp.MainPage"
             Visual="Material">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="250">
        <Label Text="Calcula tu IMC" FontAttributes="Bold" FontSize="Title" HorizontalTextAlignment="Center"/>
        <Entry Placeholder="Altura" HorizontalTextAlignment="Center" x:Name="Altura" Keyboard="Numeric" BackgroundColor="LightGray"/>
        <Entry Placeholder="Peso" HorizontalTextAlignment="Center" x:Name="Peso" Keyboard="Numeric" BackgroundColor="LightGray"/>
        <Entry Placeholder="Tu IMC" HorizontalTextAlignment="Center" x:Name="IMC" IsEnabled="False" BackgroundColor="LightGray"/>
        <Button Text="Calcular" Clicked="Button_Clicked" BackgroundColor="DarkMagenta"/>
    </StackLayout>

</ContentPage>
